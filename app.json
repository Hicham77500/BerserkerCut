{
  "expo": {
    "name": "BerserkerCut",
    "slug": "BerserkerCut",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "platforms": ["ios", "android", "web"],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.GCorp.BerserkerCut",
      "buildNumber": "1.0.4",
      "requireFullScreen": false,
      "userInterfaceStyle": "light",
      "infoPlist": {
        "NSCameraUsageDescription": "BerserkerCut utilise l'appareil photo pour capturer vos photos de progression.",
        "NSPhotoLibraryUsageDescription": "BerserkerCut a besoin d'accéder à votre photothèque pour importer et synchroniser vos photos de progression.",
        "NSPhotoLibraryAddUsageDescription": "BerserkerCut enregistre vos photos de suivi dans votre photothèque iCloud."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.Gcorp.BerserkerCut",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "extra": {
      "apiBaseUrl": "http://localhost:4000",
      "enableNewUi": true,
      "EXPO_PUBLIC_ENABLE_NEW_UI": "true"
    }
  }
}
